      <div id="productsDescriptionsContainer" class="col-xs-12 col-sm-8 col-md-9 col-lg-9 ml-auto">
        <div class="row">
          <div class="" id="startAppendingFromHere">

            <% for (var i=1; i<=Object.keys(products).length; i++) { %>

            <!-- ///////////////////////////// Start Product Template //////////////////////////////// -->
